# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET		/register					controllers.Authentication.register()
POST	/register					controllers.Authentication.saveRegistration()
GET		/login						controllers.Authentication.login()
POST	/authenticate				controllers.Authentication.authenticate()
GET		/logout						controllers.Authentication.logout()

# Manage polls

GET     /poll/new                   controllers.EditPoll.newPoll()
POST    /poll/new                   controllers.EditPoll.createPoll()
GET		/poll/addChoices/:id		controllers.EditPoll.setChoices(id: Long)
POST	/poll/addChoices/:id		controllers.EditPoll.saveChoices(id: Long)

# View polls

GET		/polls						controllers.ViewPolls.polls()

# Answer poll

GET		/poll/:id					controllers.AnswerPoll.view(id: Long)
POST	/poll/:id					controllers.AnswerPoll.answer(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
