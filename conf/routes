# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET		/register					controllers.Authentication.register()
POST	/register					controllers.Authentication.saveRegistration()
GET		/login						controllers.Authentication.login()
POST	/authenticate				controllers.Authentication.authenticate()
GET		/logout						controllers.Authentication.logout()

# User
GET		/user/profile				controllers.UserSettings.profile()
POST	/user/update/profile		controllers.UserSettings.updateProfile()
POST	/user/update/security		controllers.UserSettings.updatePassword()

# Create questions
GET     /question/new               controllers.CreateQuestion.newQuestion()
POST    /question/new               controllers.CreateQuestion.createQuestion()
GET		/question/addChoices/:id	controllers.CreateQuestion.setChoices(id: Long)
POST	/question/addChoices/:id	controllers.CreateQuestion.saveChoices(id: Long)
GET		/question/confirm/:id		controllers.CreateQuestion.confirmQuestionCreation(id: Long)

# View polls
GET		/polls						controllers.ViewPolls.polls()

# Answer question
GET		/question/:id				controllers.AnswerQuestion.view(id: Long)
POST	/question/:id				controllers.AnswerQuestion.answer(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
