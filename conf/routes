# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET		/register					controllers.Authentication.register()
POST	/register					controllers.Authentication.saveRegistration()
GET		/login						controllers.Authentication.login()
POST	/authenticate				controllers.Authentication.authenticate()
GET		/logout						controllers.Authentication.logout()

# User
GET		/user/profile				controllers.UserSettings.profile()
POST	/user/update/profile		controllers.UserSettings.updateProfile()
POST	/user/update/security		controllers.UserSettings.updatePassword()

# Create polls
GET     /poll/new                   controllers.CreatePoll.newPoll()
POST    /poll/new                   controllers.CreatePoll.createPoll()
GET		/poll/addChoices/:id		controllers.CreatePoll.setChoices(id: Long)
POST	/poll/addChoices/:id		controllers.CreatePoll.saveChoices(id: Long)

# View polls

GET		/polls						controllers.ViewPolls.polls()

# Answer poll

GET		/poll/:id					controllers.AnswerPoll.view(id: Long)
POST	/poll/:id					controllers.AnswerPoll.answer(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
