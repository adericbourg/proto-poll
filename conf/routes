# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET		/register					controllers.Authentication.register()
POST	/register					controllers.Authentication.saveRegistration()
GET		/login						controllers.Authentication.login()
POST	/authenticate				controllers.Authentication.authenticate()
GET		/logout						controllers.Authentication.logout()

# User
GET		/user/profile				controllers.UserSettings.profile()
POST	/user/update/profile		controllers.UserSettings.updateProfile()
POST	/user/update/security		controllers.UserSettings.updatePassword()

# Create questions
GET     /question/new               controllers.CreateQuestion.newQuestion()
POST    /question/new               controllers.CreateQuestion.createQuestion()
GET		/question/addChoices/:id	controllers.CreateQuestion.setChoices(id: Long)
POST	/question/addChoices/:id	controllers.CreateQuestion.saveChoices(id: Long)

# Answer question
POST	/question/:id				controllers.AnswerQuestion.answer(id: Long)

#Create events
GET		/event/new					controllers.CreateEvent.newEvent()
POST	/event/new					controllers.CreateEvent.createEvent()
GET		/event/dates/:id			controllers.CreateEvent.setDates(id: Long)
POST	/event/dates/:id			controllers.CreateEvent.saveDates(id: Long)

# Answer event
POST	/event/:id					controllers.AnswerEvent.answer(id: Long)

# Create polls
GET		/confirm/:uuid				controllers.CreatePoll.confirmCreation(uuid: util.binders.UuidBinder)

# View polls
GET		/polls						controllers.ViewPolls.polls()
GET		/poll/:id					controllers.AnswerPoll.viewPoll(id: util.binders.UuidBinder)
GET		/user/polls					controllers.ViewPolls.userPolls()

# Comment poll
POST	/poll/:id/comment			controllers.AnswerPoll.comment(id: util.binders.UuidBinder)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
